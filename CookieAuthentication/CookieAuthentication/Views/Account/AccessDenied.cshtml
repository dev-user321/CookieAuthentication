
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f3f4f6;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #1f2937;
        }

        .container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 500px;
            text-align: center;
            padding: 40px 20px;
            position: relative;
            overflow: hidden;
        }

        .error-icon {
            font-size: 80px;
            color: #ef4444;
            margin-bottom: 20px;
        }

        h1 {
            font-size: 28px;
            margin: 0 0 15px 0;
            color: #ef4444;
        }

        p {
            font-size: 16px;
            color: #6b7280;
            margin-bottom: 25px;
            line-height: 1.6;
        }

        .btn {
            display: inline-block;
            background-color: #ef4444;
            color: white;
            padding: 12px 30px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #dc2626;
            }

        .lock-icon {
            display: block;
            margin: 0 auto 20px;
            width: 80px;
            height: 80px;
        }

        .top-bar {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background-color: #ef4444;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-bar"></div>
        <svg class="lock-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        <h1>Access Denied</h1>
        <p>Sorry, you don't have permission to access this page. Please contact the administrator if you believe this is an error.</p>
        <a asp-controller="Product" asp-action="Index" class="btn">Go Back</a>
    </div>
</body>
</html>
